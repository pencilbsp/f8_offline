<div class="w-full min-h-dvh flex items-center justify-center">
  <div class="card w-96 bg-base-100 shadow-xl p-6 border">
    <div>
      <h1 class="text-2xl font-black">Đăng ký tài khoản</h1>
      <p class="mt-2">Bạn đã có tài khoản? <a href="/dang-nhap" class="link link-primary">Đăng nhập ngay</a></p>
    </div>

    <div class="divider h-auto"></div>

    <!-- SUCCESS MESSAGE -->
    <% if (typeof message !== "undefined" && message) { %>
    <div role="alert" class="alert alert-success">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      <span><%= message %></span>
    </div>
    <% } %>

    <!-- ERROR MESSAGE -->
    <% if (typeof error === "object" && error.message) { %>
    <div role="alert" class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      <span><%= error.message %></span>
    </div>
    <% } %>

    <form class="w-full" action="" method="post">
      <label class="form-control w-full">
        <div class="label">
          <span class="label-text">Họ và tên</span>
        </div>
        <input
          name="name"
          placeholder="Họ và tên"
          class="input input-bordered input-sm w-full"
          value="<%= validateFallback.formData.name %>"
        />
        <% if (validateFallback.errors.name) { %>
        <div class="label">
          <span class="label-text-alt text-error"><%= validateFallback.errors.name %></span>
        </div>
        <% } %>
      </label>

      <label class="form-control w-full">
        <div class="label">
          <span class="label-text">Email</span>
        </div>
        <input
          name="email"
          type="email"
          placeholder="Địa chỉ email"
          class="input input-bordered input-sm w-full"
          value="<%= validateFallback.formData.email %>"
        />
        <% if (validateFallback.errors.email) { %>
        <div class="label">
          <span class="label-text-alt text-error"><%= validateFallback.errors.email %></span>
        </div>
        <% } %>
      </label>

      <label class="form-control w-full">
        <div class="label">
          <span class="label-text">Mật khẩu</span>
        </div>
        <input
          name="password"
          type="password"
          placeholder="Mật khẩu"
          class="input input-bordered input-sm w-full"
          value="<%= validateFallback.formData.password %>"
        />
        <% if (validateFallback.errors.password) { %>
        <div class="label">
          <span class="label-text-alt text-error"><%= validateFallback.errors.password %></span>
        </div>
        <% } %>
      </label>

      <div class="mt-3">
        <button type="submit" class="btn btn-sm btn-block">Đăng ký</button>
      </div>
    </form>
  </div>
</div>
